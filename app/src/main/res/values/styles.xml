<resources xmlns:app="http://schemas.android.com/tools" xmlns:android="urn:oasis:names:tc:xliff:document:1.2">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:titleTextColor">@color/colorText</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="android:colorButtonNormal">@color/colorButton</item>
        <item name="android:textColorHint">@color/colorHint</item>
    </style>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Underline color change"
        android:backgroundTint="@android:color/colorAccent" />
</resources>
